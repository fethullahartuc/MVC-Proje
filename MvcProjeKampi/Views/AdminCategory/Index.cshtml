
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}
<br />

<h2>Kategoriler Listesi</h2>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>Adı</th>
            <th>Durum</th>
            <th class="text-center">Sil</th>
            <th class="text-center">Güncelle</th>
            <th class="text-center">Başlıklar</th>

        </tr>

    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th>@item.CategoryID</th>
                <td>@item.CategoryName</td>
                <td>@item.CategoryStatus</td>
                <td class="text-center"><a href="/AdminCategory/DeleteCategory/@item.CategoryID" class="btn btn-danger">Sil</a></td>
                <td class="text-center"><a href="/AdminCategory/EditCategory/@item.CategoryID" class="btn btn-warning">Güncelle</a></td>
                <td class="text-center"><a href="#" class="btn btn-primary">Başlıklar</a></td>
            </tr>
        }
    </tbody>
</table>
<a href="~/AdminCategory/AddCategory" class="btn btn-info">Yeni Kategori</a>
