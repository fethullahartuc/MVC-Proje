@model EntityLayer.Concrete.Admin
@{
    ViewBag.Title = "AddAdmin";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}
<h1>Yeni Admin Ekleme Sayfası</h1>
<br />

@using (Html.BeginForm("AddAdmin", "Authorization", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Admin Kullanıcı Adı")
        @Html.TextBoxFor(x => x.AdminUserName, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.AdminUserName, null, new { @class = "text-danger" })
        <br />
        @Html.Label("Şifreyi Giriniz")
        @Html.TextAreaFor(x => x.AdminPassword, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.AdminPassword, null, new { @class = "text-danger" })
        <br /> 
        @Html.Label("Rolü Seçiniz")
        @Html.TextAreaFor(x => x.AdminRole, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.AdminRole, null, new { @class = "text-danger" })
        <br /> 
        <button class="btn btn-primary">Kaydet</button>
        <a href="/Authorization/Index" class="btn btn-warning">Geri dön</a>
    </div>
}


