@model EntityLayer.Concrete.Heading

@{
    ViewBag.Title = "AddHeading";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<h2>Başlık Ekleme Sayfası</h2>

@using (Html.BeginForm("AddHeading", "Heading", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Başlık Adı")
        @Html.TextBoxFor(x => x.HeadingName, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.HeadingName, null, new { @class = "text-danger" })
        <br /> <br />
        @Html.Label("Kategori Adı")
        @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.vlc, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.CategoryID, null, new { @class = "text-danger" })
        <br /> <br />
        @Html.Label("Yazar Adı")
        @Html.DropDownListFor(x => x.WriterID, (List<SelectListItem>)ViewBag.vlw, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.WriterID, null, new { @class = "text-danger" })
        <br /> <br />
        <button class="btn btn-primary">Başlığı Oluştur</button>
        <a href="/Heading/Index" class="btn btn-warning">Geri dön</a>
    </div>
}
