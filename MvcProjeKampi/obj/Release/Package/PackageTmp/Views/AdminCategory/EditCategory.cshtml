@model EntityLayer.Concrete.Category
@{
    ViewBag.Title = "EditCategory";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

@using (Html.BeginForm("EditCategory", "AdminCategory", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Kategory ID")
        @Html.TextBoxFor(x=>x.CategoryID, new { @class = "form-control", @readonly = "readonly"})
        <br /><br />
        @Html.Label("Kategori Adı")
        @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.CategoryName, null, new { @class = "text-danger" })
        <br /> <br />
        @Html.Label("Açıklamayı Yazınız")
        @Html.TextAreaFor(x => x.CategoryDescription, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.CategoryDescription, null, new { @class = "text-danger" })
        <br /> <br />
        <button class="btn btn-primary">Kaydet</button>
        <a href="/AdminCategory/Index" class="btn btn-warning">Geri dön</a>
    </div>
}
